VERSION=1
BUILD=${BUILD:-1}

# Automatically determine the architecture we're building on:
if [ -z "$ARCH" ]; then
  case "$( uname -m )" in
    i?86) export ARCH=i486 ;;
    arm*) export ARCH=arm ;;
    # Unless $ARCH is already set, use uname -m for all other archs:
       *) export ARCH=$( uname -m ) ;;
  esac
fi

CWD=$(pwd)
TMP=${TMP:-/tmp}
PKG=$TMP/package-aaa_base

rm -rf $PKG
mkdir -p $TMP $PKG

# Explode the package framework:
cd $PKG
explodepkg $CWD/_aaa_base.tar.gz

echo "+======================+"
echo "| repackaging aaa_base |"
echo "+======================+"

cat $CWD/slack-desc > $PKG/install/slack-desc

CONFIG_FILES="lilala-version fstab group inittab keymap mdev.conf minirc.conf os-release profile syslog.conf"
for i in $CONFIG_FILES
do
    cp -a $CWD/etc/$i $PKG/etc/$i
    chown root:root $PKG/etc/$i
    chmod 644 $PKG/etc/$i
done

# install rc script
mkdir -p $PKG/etc/init.d
chown root:root $PKG/etc/init.d
chmod 644 $PKG/etc/init.d

cp -a $CWD/etc/init.d/rc $PKG/etc/init.d/rc
chown root:root $PKG/etc/init.d/rc
chmod 755 $PKG/etc/init.d/rc

# Build the package:
cd $PKG
makepkg -l y -c n $TMP/aaa_base-$VERSION-noarch-$BUILD.tgz

# Clean up the extra stuff:
if [ "$1" = "--cleanup" ]; then
  rm -rf $PKG
fi
