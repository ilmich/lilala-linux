PRGNAM=kernel
VERSION=${SLK_BOARD}_5.4.84
SRCNAM=linux-5.4.84
SOURCE_TAR=
BUILD=1
DOWNLOAD_URL=https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-5.4.84.tar.xz
DOWNLOAD_SHA1=3670b9ec553bfd125fbb33edf08fc0c06d8a2ad5
DEPS=

function build() {
cd $TMP
rm -rf $SRCNAM
tar xvf $CWD/$SOURCE_TAR
cd $SRCNAM
chown -R root:root .

#apply patches
for i in `find $CWD/patches/ -name *.patch | sort -`; do
    patch -p1 < $i
done

if [ ! -e $CWD/kernel_${SLK_BOARD}_config ]; then
    echo "config for kernel $SLK_BOARD not found!!"
    exit 1
fi

cp $CWD/kernel_${SLK_BOARD}_config arch/$ARCH/configs/${SLK_BOARD}_defconfig
make -j3 ARCH=$ARCH CROSS_COMPILE=$SLK_TARGET- ${SLK_BOARD}_defconfig
make -j3 ARCH=$ARCH CROSS_COMPILE=$SLK_TARGET-
make -j3 ARCH=$ARCH CROSS_COMPILE=$SLK_TARGET- INSTALL_MOD_PATH=$PKG/ modules_install
#install kernel headers into sysroot
make -j3 ARCH=$ARCH CROSS_COMPILE=$SLK_TARGET- headers_install INSTALL_HDR_PATH=$SLK_SYSROOT/usr

mkdir -p $PKG/boot/overlays

cp arch/$ARCH/boot/zImage $PKG/boot/vmlinuz-$VERSION
if [ -e arch/$ARCH/boot/dts ]; then
    cp arch/$ARCH/boot/dts/*.dtb $PKG/boot/
fi
if [ -e arch/$ARCH/boot/dts/overlays ]; then
    cp arch/$ARCH/boot/dts/overlays/*.dtb* $PKG/boot/overlays/
fi

}