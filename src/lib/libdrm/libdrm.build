PRGNAM=libdrm
VERSION=2.4.100
BUILD=1
DOWNLOAD_URL=https://dri.freedesktop.org/libdrm/libdrm-$VERSION.tar.gz
DOWNLOAD_SHA1=2097f0b98deaff16b8f3b93cedcb5cd35291a3c1
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS=

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --disable-intel \
  --enable-vc4 \
  --enable-freedreno \
  --enable-freedreno-kgsl \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

#remove .la
rm $PKG/usr/lib/*.la

# install docs
#mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
#cp -a Changes COPYING README.md $PKG/usr/doc/$PRGNAM-$VERSION

}