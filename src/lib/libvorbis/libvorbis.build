PRGNAM=libvorbis
VERSION=1.3.6
BUILD=1
DOWNLOAD_URL=https://ftp.osuosl.org/pub/xiph/releases/vorbis/libvorbis-$VERSION.tar.xz
DOWNLOAD_SHA1=237e3d1c66452734fd9b32f494f44238b4f0185e
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="libogg"

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CPPFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

#remove .la
rm $PKG/usr/lib/*.la
#remove useless docs
rm -r $PKG/usr/share/

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a AUTHORS CHANGES COPYING $PKG/usr/doc/$PRGNAM-$VERSION

}