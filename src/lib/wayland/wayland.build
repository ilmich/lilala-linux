PRGNAM=wayland
VERSION=1.18.0
BUILD=1
DOWNLOAD_URL=https://wayland.freedesktop.org/releases/wayland-$VERSION.tar.xz
DOWNLOAD_SHA1=33e5292b32a115e829458ea627201ed1e4ad4f45
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="expat libffi"

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CPPFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --disable-documentation \
  --disable-dtd-validation \
  --with-host-scanner \
  --host=$SLK_TARGET

make V=1
make DESTDIR=$PKG install

#remove .la
rm $PKG/usr/lib/*.la

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a COPYING README* $PKG/usr/doc/$PRGNAM-$VERSION

}