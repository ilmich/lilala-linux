PRGNAM=libretro-snes9x2010
SRCNAM=snes9x2010
VERSION=20200425
BUILD=1
DOWNLOAD_URL=
DOWNLOAD_SHA1=
DEPS="RetroArch"

function build() {
cd $TMP
rm -rf $SRCNAM-$VERSION
tar xvf $CWD/$SRCNAM-$VERSION.tar.xz
cd $SRCNAM-$VERSION
chown -R root:root .

#apply patches
for i in `find $CWD/patches/ -name *.patch | sort -`; do
    patch -p1 < $i
done

CC="$SLK_TARGET-gcc --sysroot=$SLK_SYSROOT -s" platform=armv7a-neon-hardfloat make -f Makefile.libretro
install -Dm644 snes9x2010_libretro.so $PKG/usr/lib/libretro/snes9x2010_libretro.so
install -Dm644 $CWD/snes9x2010_libretro.info $PKG/usr/share/libretro/info/snes9x2010_libretro.info

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a LICENSE.txt $PKG/usr/doc/$PRGNAM-$VERSION

}