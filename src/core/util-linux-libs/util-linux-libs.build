PRGNAM=util-linux-libs
SRCNAM=util-linux
VERSION=2.37
BUILD=1
DOWNLOAD_URL=https://mirrors.edge.kernel.org/pub/linux/utils/util-linux/v2.37/util-linux-$VERSION.tar.gz
DOWNLOAD_SHA1=cbf6a589dc19f1b02192744b93942ca9e41ec230
SOURCE_TAR=$SRCNAM-$VERSION.tar.gz
DEPS=

function build() {
cd $TMP
rm -rf $SRCNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $SRCNAM-$VERSION

PATH="$SLK_SYSROOT/usr/bin:$PATH" \
CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CPPFLAGS=" --sysroot=$SLK_SYSROOT " \
LDFLAGS=" --sysroot=$SLK_SYSROOT " \
./configure \
  --prefix=/ \
  --sysconfdir=/etc \
  --libdir=/lib \
  --mandir=/usr/man \
  --infodir=/usr/share/info \
  --datarootdir=/usr/share \
  --includedir=/usr/include \
  --without-tinfo \
  --without-python \
  --disable-nls \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install-usrlib_execLTLIBRARIES install-nodist_blkidincHEADERS install-nodist_fdiskincHEADERS \
    install-nodist_mountincHEADERS \
    install-nodist_smartcolsincHEADERS install-uuidincHEADERS
# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a README* COPYING $PKG/usr/doc/$PRGNAM-$VERSION
}
