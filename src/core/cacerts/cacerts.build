PRGNAM=cacerts
VERSION=20220401
BUILD=1
DOWNLOAD_URL=
DOWNLOAD_SHA1=
SOURCE_TAR=$PRGNAM-$VERSION.tar.gz
DEPS=

function build() {
#extract source
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION

mkdir -p $PKG/etc/ssl/certs

for i in `ls certs/*`;do
    chmod 0644 $i
    cp -a $i $PKG/etc/ssl/$i
done

}



