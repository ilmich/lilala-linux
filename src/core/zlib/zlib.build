PRGNAM=zlib
VERSION=1.2.11
BUILD=1
DOWNLOAD_URL=http://prdownloads.sourceforge.net/libpng/zlib-$VERSION.tar.gz
DOWNLOAD_SHA1=e6d119755acdf9104d7ba236b1242696940ed6dd
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS=

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

patch -p0 < $CWD/configure-mandir.patch

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CHOST=$SLK_TARGET \
LDFLAGS="-Wl,-soname,libz.so.1" \
./configure \
  --prefix=/ \
  --libdir=/usr/lib \
  --mandir=/usr/man \
  --includedir=/usr/include \
  --shared

make -j2
make DESTDIR=$PKG install

#remove static
rm $PKG/usr/lib/*.a
mkdir -p $PKG/usr/lib/

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a ChangeLog FAQ INDEX README $PKG/usr/doc/$PRGNAM-$VERSION

}