PRGNAM=curl
VERSION=7.80.0
BUILD=1
DOWNLOAD_URL=https://curl.haxx.se/download/$PRGNAM-$VERSION.tar.gz
DOWNLOAD_SHA1=596408d3273efd7f2b6bb5146dc0d12e164bac43
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="zlib openssl"

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --with-ca-path=/etc/ssl/certs \
  --disable-pop3 \
  --disable-imap \
  --disable-smb \
  --disable-smtp \
  --disable-dict \
  --disable-telnet \
  --disable-rtsp \
  --disable-ldap \
  --with-openssl \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

# remove .la files
find $PKG -name *.la -exec rm {} \;
# pkg cleanup
rm $PKG/usr/bin/curl-config

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a CHANGES COPYING README $PKG/usr/doc/$PRGNAM-$VERSION

}
