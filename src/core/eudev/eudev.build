PRGNAM=eudev
VERSION=3.2.9
SOURCE_TAR=$PRGNAM-$VERSION.tar.gz
BUILD=1
DOWNLOAD_URL=https://github.com/gentoo/eudev/archive/v$VERSION.tar.gz
DOWNLOAD_SHA1=0648c6e104057fc074a80a742d316cd0b6bee949
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="kmod"

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

./autogen.sh

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/ \
  --disable-static \
  --libdir=/lib \
  --libexecdir=/libexec \
  --bindir=/bin \
  --sbindir=/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

install -D -m=0700 $CWD/rc.udev.new $PKG/etc/rc.d/rc.udev.new

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a COPYING README* NOTES $PKG/usr/doc/$PRGNAM-$VERSION
}