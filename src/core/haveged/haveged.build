PRGNAM=haveged
VERSION=1.9.18
BUILD=1
DOWNLOAD_URL=https://github.com/jirka-h/haveged/archive/v$VERSION.tar.gz
DOWNLOAD_SHA1=5d812f9e1eccdf8fc67f8e87020fa0e72a4e9266
SOURCE_TAR=$PRGNAM-$VERSION.tar.gz
DEPS=

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

#cleanup .la files
find $PKG -name *.la -exec rm {} \;

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a ChangeLog INSTALL AUTHORS NEWS README COPYING  $PKG/usr/doc/$PRGNAM-$VERSION

}
