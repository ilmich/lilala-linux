PRGNAM=gcc_libs
SPRGNAM=gcc
VERSION=14.2.0
BUILD=1
DOWNLOAD_URL=
DOWNLOAD_SHA1=
DEPS=

function build() {
#copy libs from toolchains in order to avoid a boring compilation of gcc
mkdir -p $PKG/lib
cp -a $SLK_TOOLCHAIN_PATH/$SLK_TARGET/lib/{libatomic*.so*,libgcc_s*.so*,libstdc*.so*} $PKG/lib
}

