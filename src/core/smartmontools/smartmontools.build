PRGNAM=smartmontools
VERSION=7.3
BUILD=2
DOWNLOAD_URL=https://sourceforge.net/projects/smartmontools/files/smartmontools/7.3/smartmontools-$VERSION.tar.gz
DOWNLOAD_SHA1=5ce7adb606119148d725b91a00652d427ca0adc2
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="utils-linux-libs gcc_libs"

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
LDFLAGS=" --sysroot=$SLK_SYSROOT -lblkid -luuid " \
./configure \
  --prefix=/ \
  --sysconfdir=/etc \
  --libdir=/lib \
  --mandir=/usr/man \
  --infodir=/usr/share/info \
  --datarootdir=/usr/share \
  --includedir=/usr/include \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a AUTHORS COPYING INSTALL NEWS README TODO $PKG/usr/doc/$PRGNAM-$VERSION
}
