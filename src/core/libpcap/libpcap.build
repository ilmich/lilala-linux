PRGNAM=libpcap
VERSION=1.10.1
BUILD=1
DOWNLOAD_URL=http://www.tcpdump.org/release/libpcap-$VERSION.tar.gz
DOWNLOAD_SHA1=4343528176e0402cce807a09a97191069a1e3dd9
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS=

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --libdir=/usr/lib \
  --includedir=/usr/include \
  --mandir=/usr/man \
  --enable-ipv6 \
  --with-pcap=linux \
  --disable-dbus \
  --disable-bluetooth \
  --disable-yydebug \
  --enable-shared \
  --without-libnl \
  --host=$SLK_TARGET

make -j2
make DESTDIR=$PKG install

#remove static lib
rm $PKG/usr/lib/*.a

mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a CHANGES CREDITS INSTALL.md LICENSE README* TODO VERSION $PKG/usr/doc/$PRGNAM-$VERSION

}