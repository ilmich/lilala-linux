PRGNAM=parted
VERSION=3.4
BUILD=1
DOWNLOAD_URL=https://ftp.gnu.org/gnu/parted/parted-$VERSION.tar.xz
DOWNLOAD_SHA1=903c58fab429d3b62aa324033a3e41b0b96ad810
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="ncurses readline e2fsprogs"

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
LDFLAGS=" --sysroot=$SLK_SYSROOT" \
./configure \
  --prefix=/ \
  --sysconfdir=/etc \
  --libdir=/lib \
  --mandir=/usr/man \
  --infodir=/usr/share/info \
  --datarootdir=/usr/share \
  --includedir=/usr/include \
  --disable-device-mapper \
  --disable-rpath \
  --disable-nls \
  --disable-static \
  --enable-shared \
  --host=$SLK_TARGET

make -j2 V=1
make DESTDIR=$PKG install

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a INSTALL README COPYING $PKG/usr/doc/$PRGNAM-$VERSION
}
