#!/bin/sh

OPTIONS=
if [ -e /etc/ntpd.conf ]; then

    . /etc/ntpd.conf

    [ ! -z $NTPD_SERVER ] && OPTIONS="$OPTIONS -p $NTPD_SERVER"
    [ $NTPD_DAEMON == "true" ] || [ $NTPD_DAEMON == "TRUE" ] && OPTIONS="$OPTIONS -l"
    [ ! -z $NTPD_DAEMON_IFACE ] && OPTIONS="$OPTIONS -I $NTPD_DAEMON_IFACE"

fi

exec /sbin/ntpd -n $OPTIONS