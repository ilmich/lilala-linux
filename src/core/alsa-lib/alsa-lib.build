PRGNAM=alsa-lib
VERSION=1.2.5.1
BUILD=1
DOWNLOAD_URL=https://www.alsa-project.org/files/pub/lib/alsa-lib-$VERSION.tar.bz2
DOWNLOAD_SHA1=842612c57e47c36b6f0f9f08de8255f6ba7ba065
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS=

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $PRGNAM-$VERSION
chown -R root:root .

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s" \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -s " \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --disable-python \
  --host=$SLK_TARGET

cp $CWD/smixer.conf src/conf

make  V=1
make DESTDIR=$PKG install

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a ChangeLog INSTALL MEMORY-LEAK NOTES TODO COPYING  $PKG/usr/doc/$PRGNAM-$VERSION

}
