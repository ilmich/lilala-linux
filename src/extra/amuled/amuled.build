PRGNAM=amuled
SRCNAM=aMule
VERSION=r11003
BUILD=1
DOWNLOAD_URL=http://ponce.cc/slackware/sources/repo/$SRCNAM-$VERSION.tar.xz
DOWNLOAD_SHA1=c7da52be4c8d48724331e1159b390934b280a16e
SOURCE_TAR=`basename $DOWNLOAD_URL`
DEPS="wxbase libupnp cryptopp libpng"

function build() {
cd $TMP
#rm -rf $SRCNAM-$VERSION
tar xvf $CWD/$SOURCE_TAR
cd $SRCNAM-$VERSION
chown -R root:root .

# make libupnp available also in cross compilation
cp $CWD/libupnp.m4 m4/

./autogen.sh

CFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT  -s -I/usr/include/upnp " \
CXXFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -I=/usr/include/upnp/ " \
CPPFLAGS="$SLK_CFLAGS --sysroot=$SLK_SYSROOT -I=/usr/include/upnp/ " \
LDFLAGS="--sysroot=$SLK_SYSROOT" \
./configure \
  --prefix=/usr \
  --disable-static \
  --libdir=/usr/lib \
  --bindir=/usr/bin \
  --sbindir=/usr/sbin \
  --sysconfdir=/etc \
  --localstatedir=/var \
  --mandir=/usr/man \
  --docdir=/usr/doc/$PRGNAM-$VERSION \
  --includedir=/usr/include \
  --disable-monolithic \
  --enable-upnp \
  --enable-amule-daemon \
  --enable-webserver \
  --disable-nls \
  --with-crypto-prefix=$SLK_SYSROOT/usr/ \
  --with-libpng-prefix=$SLK_SYSROOT/usr/ \
  --with-wx-prefix=$SLK_SYSROOT/usr/ \
  --host=$SLK_TARGET

make V=1
make DESTDIR=$PKG install

# install docs
mkdir -p $PKG/usr/doc/$PRGNAM-$VERSION
cp -a docs/ $PKG/usr/doc/$PRGNAM-$VERSION

}