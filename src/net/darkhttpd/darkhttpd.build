PRGNAM=darkhttp
VERSION=1.12_20210123
BUILD=2
DOWNLOAD_URL=
DOWNLOAD_SHA1=
SOURCE_TAR=
DEPS=

function build() {
cd $TMP
rm -rf $PRGNAM-$VERSION
mkdir $PRGNAM-$VERSION
cd $PRGNAM-$VERSION
wget https://unix4lyfe.org/gitweb/darkhttpd/blob_plain/1990aee864ab4224d5437387161daa71a5d900f7:/darkhttpd.c

$SLK_TARGET-gcc $SLK_CFLAGS --sysroot=$SLK_SYSROOT darkhttpd.c -o darkhttpd

mkdir -p $PKG/usr/bin
mkdir -p $PKG/etc/rc.d

install -D -m=0755 darkhttpd $PKG/usr/bin/
install -D -m=0755 $CWD/rc.darkhttpd $PKG/etc/rc.d/rc.darkhttpd.new

}